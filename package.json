{
	"name": "root",
	"private": true,
	"packageManager": "pnpm@10.17.0",
	"engines": {
		"node": ">=22.20.0"
	},
	"workspaces": [
		"./packages/*"
	],
	"pnpm": {
		"patchedDependencies": {
			"@changesets/assemble-release-plan": "patches/@changesets__assemble-release-plan.patch"
		}
	},
	"scripts": {
		"changeset": "changeset",
		"changeset:status": "changeset status --since=origin/main",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",

		"docs:build": "pnpm build && pnpm --filter docs-twoslash build",
		"docs:dev": "pnpm build && pnpm --filter docs-twoslash dev",

		"build": "pnpm --filter './packages/*' build",

		"dev": "pnpm --filter playground --filter './packages/*' -r --parallel dev",

		"ci:install": "pnpm install --frozen-lockfile",
		"ci:version": "changeset version",
		"ci:publish": "changeset publish",
		"ci:build": "pnpm build",
		"ci:lint": "pnpm lint"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.14",
		"@changesets/cli": "^2.29.8",
		"@changesets/config": "^3.1.2",
		"@changesets/changelog-github": "^0.5.2",
		"tsdown": "^0.20.3",
		"@types/node": "catalog:",
		"pkg-pr-new": "^0.0.63"
	}
}

{
	"name": "root",
	"private": true,
	"packageManager": "pnpm@10.17.0",
	"type": "module",
	"engines": {
		"node": ">=22.20.0"
	},
	"workspaces": [
		"./packages/*"
	],
	"pnpm": {
		"patchedDependencies": {
			"@changesets/assemble-release-plan": "patches/@changesets__assemble-release-plan.patch"
		}
	},
	"scripts": {
		"changeset": "changeset",
		"changeset:status": "changeset status --since=origin/main",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",

		"docs:build": "pnpm build && pnpm --filter docs-twoslash build",
		"docs:dev": "pnpm build && pnpm --filter docs-twoslash dev",

		"build": "pnpm --filter './packages/*' build",
		"dev": "pnpm --filter './packages/*' --filter playground -r --parallel dev",
		"test": "vitest",

		"ci:install": "pnpm install --frozen-lockfile",
		"ci:version": "changeset version",
		"ci:publish": "changeset publish",
		"ci:build": "pnpm build",
		"ci:lint": "pnpm lint",
		"ci:test": "allure run -- pnpm test",

		"allure:view": "allure open allure-report"
	},
	"devDependencies": {
		"@allurereport/plugin-awesome": "^3.1.0",
		"@biomejs/biome": "^2.3.14",
		"@changesets/cli": "^2.29.8",
		"@changesets/config": "^3.1.2",
		"@changesets/changelog-github": "^0.5.2",
		"@types/node": "catalog:",
		"@vitest/ui": "^4.0.18",
		"@vitest/runner": "^4.0.18",
		"allure": "^3.1.0",
		"allure-js-commons": "^3.4.5",
		"allure-vitest": "^3.4.5",
		"tsdown": "^0.20.3",
		"typescript": "^5.9.3",
		"pkg-pr-new": "^0.0.63",
		"publint": "^0.3.17",
		"vitest": "^4.0.18"
	}
}
